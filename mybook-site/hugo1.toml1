# hugo server --minify --themesDir ../..

# 站点基本配置
baseURL = 'http://0.0.0.0:39346/'
title = 'Hugo Book'
theme = 'hugo-book'

uglyURLs = false

# Book 配置相关
# disablePathToLower: true 表示禁用路径转小写
# enableGitInfo: true 表示启用 Git 信息
disablePathToLower = true
enableGitInfo = true

# markdown 渲染相关配置，支持 mermaid/katex
[markup]
[markup.goldmark.renderer]
  unsafe = true

[markup.tableOfContents]
  startLevel = 1

# 多语言模式配置
# 通过文件名翻译和通过内容目录翻译两种方式
[languages]
[languages.zh]
  languageName = 'Chinese'
  contentDir = 'content.zh'
  weight = 1
#  [languages.en]
#    languageName = 'English'
#    contentDir = 'content.en'
#   weight = 2

# [languages.he]
#   languageName = 'Hebrew'
#   contentDir = 'content.he'
#   languageDirection = 'rtl'
#   weight = 3


[menu]
[[menu.home]]
  name = "菜单1"
  url = "/content.zh/docs/"
  weight = 1

[[menu.home]]
  name = "菜单1子菜单"
  parent = '菜单1'
  url = "/content.zh/docs/docs2"
  weight = 2


[[menu.home]]
  name = "菜单2"
  url = "/content.zh/知识技巧"
  weight = 3


# 页脚菜单配置
